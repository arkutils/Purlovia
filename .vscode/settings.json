{
    "files.exclude": {
        ".venv": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        ".vscode/.ropeproject": true,
    },

    "python.jediEnabled": false,
    "python.languageServer": "Microsoft",
    "python.pythonPath": ".venv\\Scripts\\python.exe",

    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [],

    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,

    "python.sortImports.args": ["--settings-path=${workspaceFolder}/setup.cfg"],
    "python.formatting.provider": "yapf",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "editor.codeActionsOnSaveTimeout": 10000,
    "editor.formatOnSaveTimeout": 10000,

    "git.ignoreLimitWarning": true,

    "cSpell.words": [
        "DCSC",
        "DCSCs",
        "Dinos",
        "Mult",
        "Purlovia",
        "Struct",
        "Tproxy",
        "Valguero",
        "asdict",
        "buildid",
        "consts",
        "deserialise",
        "deserialising",
        "functools",
        "isabs",
        "isnumeric",
        "itertools",
        "klass",
        "mkdir",
        "mkdirs",
        "modid",
        "modutils",
        "mults",
        "mypy",
        "noqa",
        "optionxform",
        "psutil",
        "pydantic",
        "pylint",
        "pytest",
        "rfind",
        "serialiser",
        "steamcmd",
        "uasset",
        "umap",
        "xlocal"
    ],
    "cSpell.diagnosticLevel": "Hint",

    "coverage-gutters.xmlname": "coverage.xml",
    "coverage-gutters.ignoredPathGlobs": "{livedata,output,logs,interactive,.vscode,config,.vscode}/**",

    "githubIssues.workingIssueBranch": "issue-${issueNumber}",

    "yaml.schemas": {
        // To update this schema run `pipenv run update-schema`
        "./schema/overrides.yaml.json": ["/config/overrides.yaml"],
    }
}
